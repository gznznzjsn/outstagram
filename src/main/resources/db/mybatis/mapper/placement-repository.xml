<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.gznznzjsn.outstagram.persistence.repository.PlacementRepository">

    <resultMap id="PlacementMap" type="Placement" autoMapping="false">
        <id column="id" property="id"/>
        <association column="source_id" property="source" columnPrefix="source_"
                     resultMap="com.gznznzjsn.outstagram.persistence.repository.PostRepository.PostMap"
                     autoMapping="false"/>
        <association column="target_id" property="target" columnPrefix="target_"
                     resultMap="com.gznznzjsn.outstagram.persistence.repository.PlaceRepository.PlaceMap"
                     autoMapping="false"/>
    </resultMap>

    <insert id="create">
        match (a:POST), (b:PLACE)
            where a.id = #{source.id} and b.id = #{target.id}
        create (a)-[:PLACED {id: #{id}}]->(b);
    </insert>

</mapper>